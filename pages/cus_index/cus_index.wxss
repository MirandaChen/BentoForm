.adder{
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px dotted gray;
}
picker{
  width: 80%;
  padding: 10rpx;
  background-color: gainsboro;
  text-align: center;
  font-size: 20px;
  border-radius: 10px;
}

.restaurants{
  margin-top: 50rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item{
  padding: 10rpx;
  margin: 20rpx;
  width: 85%;
  background-color: aliceblue;
  border-radius: 10px;
}
.header{
  padding: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid gray;
}
.info{
  margin: 10rpx;
  font-size: 12px;
  color: grey;
}

.orders{
  margin-top: 100rpx;
}