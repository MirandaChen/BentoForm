<!--menu.wxml-->
<!-- 管理菜单 -->
<!-- 1. 显示已添加菜单 -->
<view class="title" >
    <text id="title">已添加菜单\n</text>
</view>

<view class="menu">
    <view class="delete">
        <icon type="clear"></icon>
    </view>

    <view>
        <text class="entree">黑椒牛肉盖饭\n</text>
        <text class="side">绿豆西米露 或 大骨汤 或 西瓜汁\n</text>
    </view>

    <view class="price">
        <text class="price">$9</text>
    </view>
</view>
<!-- 2. 添加 -->
<view class="add">
    <input placeholder='主菜'></input>
    <input placeholder='配菜'></input>
    <input placeholder='金额'></input>
</view>
<view class="confirm">
    <button>确认添加</button>
</view>

