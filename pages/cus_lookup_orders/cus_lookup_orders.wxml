<!--查看订单-->
<view class="title">
  <text>查看订单</text>
</view>

<view wx:for="{{order}}">
  <text>微信名：{{item.name}}\n</text>
  <text>取餐时间：{{item.time}}\n</text>
  <text>取餐地点：{{item.location}}\n</text>
  <text>金额：{{item.price}}\n</text>
  <text>订单详情: {{item.details}}\n</text>
</view>

<view class="back">
  <button>返回</button>
</view>